@model Mission08.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>

<p>Are you sure you want to delete this task?</p>

<div class="mb-3">
    <div class="fw-bold">@Model.TaskName</div>
    <div class="text-muted">Quadrant: @Model.Quadrant</div>
    <div class="text-muted">Due: @(Model.DueDate?.ToString("yyyy-MM-dd") ?? "None")</div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TaskId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Quadrants" class="btn btn-secondary">Cancel</a>
</form>